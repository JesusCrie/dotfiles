[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
line = ${colors.background}

workspace = ${xrdb:color7}
workspace-focus = ${xrdb:color0}

[bar/top]
bottom = false
fixed-center = true

width = 100%
height = 30
offset-x = 1%
offset-y = 1%

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0

module-margin = 2
padding = 2

font-0 = "FuraCode Nerd Font:size=11;3"

modules-left = i3
modules-center = title
modules-right = pulseaudio update battery date

locale = en_US.UTF-8

[bar/bottom]
bottom = true
fixed-center = true

width = 100%
height = 30
offset-x = 1%
offset-y = 1%

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0

module-margin = 2
padding = 2

font-0 = "FuraCode Nerd Font:size=11;3"

modules-left = powermenu backlight spotify
modules-right = cpu memory network-wifi

locale = en_US.UTF-8

[module/i3]
type = internal/i3
pin-workspaces = false
strip-wsnumbers = true
format = <label-state> <label-mode>

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;ﭮ
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

label-mode = %mode%
label-visible = %icon%
label-focused = %index% %icon%
label-unfocused = %icon%
label-urgent = %index% %icon%
label-mode-padding = 2
label-visible-padding = 2
label-focused-padding = 2
label-unfocused-padding = 2
label-urgent-padding = 2

label-visible-background = ${colors.workspace-focus}
label-visible-foreground = ${colors.workspace}
label-focused-background = ${colors.workspace-focus}
label-focused-foreground = ${colors.workspace}
label-unfocused-foreground = ${colors.workspace}

label-urgent-background = ${xrdb:color1:#dc322f}

[module/cpu]
type = internal/cpu
interval = 1
format = <label> <ramp-coreload>
format-prefix = " "
format-prefix-foreground = ${xrdb:color9}
label = CPU

ramp-coreload-spacing = 1
ramp-coreload-foreground = ${xrdb:color11}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-6-foreground = ${xrdb:color9}
ramp-coreload-7 = █
ramp-coreload-7-foreground = ${xrdb:color1}

[module/memory]
type = internal/memory
interval = 2
format = <label> <bar-used>
format-prefix = " "
format-prefix-foreground = ${xrdb:color3}
label = RAM %percentage_used%%

bar-used-format = [%fill%%empty%]
bar-used-width = 10
bar-used-gradient = false
bar-used-foreground-0 = ${xrdb:color2}
bar-used-foreground-1 = ${xrdb:color2}
bar-used-foreground-2 = ${xrdb:color2}
bar-used-foreground-3 = ${xrdb:color1}
bar-used-fill = ━
bar-used-empty = ─
bar-used-empty-foreground = ${xrdb:color7}

[module/date]
type = internal/date
interval = 1.0
format = <label>
format-prefix = " "
format-prefix-foreground = ${xrdb:color2}
label = %date%%time%

time = %H:%M:%S
time-alt =
date =
date-alt = %d/%m/%Y

[module/title]
type = internal/xwindow
format = <label>
lable = %title%
label-empty =
label-maxlen = 70

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 5

format-volume = VOL <label-volume> <bar-volume>
format-volume-prefix = "墳 "
format-volume-prefix-foreground = ${xrdb:color5}
label-volume = %percentage%%

format-muted = <label-muted>
format-muted-prefix = "婢 "
format-muted-prefix-foreground = ${xrdb:color1}
label-muted = VOL Muted

bar-volume-format = [%fill%%empty%]
bar-volume-width = 10
bar-volume-gradient = false
bar-volume-foreground-0 = ${xrdb:color2}
bar-volume-foreground-1 = ${xrdb:color2}
bar-volume-foreground-2 = ${xrdb:color2}
bar-volume-foreground-3 = ${xrdb:color2}
bar-volume-foreground-4 = ${xrdb:color2}
bar-volume-foreground-5 = ${xrdb:color1}

bar-volume-fill = ━
bar-volume-empty = ─
bar-volume-empty-foreground = ${xrdb:color7}

