[module/network-wifi]
type = internal/network
interface = wlp1s0
interval = 3.0
ping-interval = 15
accumulate-stats = true

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${xrdb:color4}
format-connected-suffix = " "
format-connected-suffix-foreground = ${xrdb:color2}
label-connected = %upspeed% %downspeed%

format-disconnected = <label-disconnected>
label-disconnected = 睊
label-disconnected-foreground = ${xrdb:color1}

format-packet-loss = <animation-packetloss> <label-packetloss>
label-packetloss = Packet loss
label-packetloss-foreground = ${xrdb:color1}
animation-packetloss-0 = 
animation-packetloss-0-foreground = ${xrdb:color1}
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${xrdb:color3}

[module/update]
type = custom/script
exec = ~/.config/polybar/arch-update.sh --display
exec-if = wget -q --spider http://google.com
; 10 minutes
interval = 600

format = <label>
format-prefix = " "
format-prefix-foreground = ${xrdb:color4}
; Update display
click-left = ~/.config/polybar/arch-update.sh --display
; Trigger update
click-right = ~/.config/polybar/arch-update.sh --update

[module/spotify-old]
type = custom/script
exec = ~/.config/polybar/spotify.sh --status
exec-if = pgrep -x spotify
interval = 1

click-left = ~/.config/polybar/spotify.sh --toggle
click-right = ~/.config/polybar/spotify.sh --toggle

[module/spotify]
type = custom/script
exec = python ~/.config/polybar/spotify.py $(~/bin/xrdbq color2)
exec-if = pgrep -x spotify
interval = 2

[settings]
screenchange-reload = true
