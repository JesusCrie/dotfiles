[module/powermenu]
type = custom/menu
expand-right = true

format = <label-toggle> <menu>
label-open = 
label-open-foreground = ${xrdb:color1}
label-close = 
label-close-foreground = ${xrdb:color1}
label-separator = " | "

menu-0-0 =  Suspend
menu-0-0-foreground = ${xrdb:color6}
menu-0-0-exec = systemctl suspend
menu-0-1 =  Reboot
menu-0-1-foreground = ${xrdb:color3}
menu-0-1-exec = systemctl reboot
menu-0-2 =  Shutdown
menu-0-2-foreground = ${xrdb:color1}
menu-0-2-exec = systemctl poweroff

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC0

format-full = <label-full>
label-full-prefix = 
label-full-prefix-foreground = ${xrdb:color2}
label-full = 100%

format-charging = <animation-charging> <label-charging>
format-charging-prefix = " "
format-charging-prefix-foreground = ${xrdb:color11}
label-charging = %percentage%% +%consumption%W
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750
animation-charging-foreground = ${xrdb:color2}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% -%consumption%W
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${xrdb:color1}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${xrdb:color3}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${xrdb:color2}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${xrdb:color2}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${xrdb:color2}

